<div class="min-vh-100 d-flex align-items-center justify-content-center" style="background: linear-gradient(135deg, #341539, #83358F);">
  <div class="bg-white p-5 rounded-4 shadow" style="width: 100%; max-width: 400px;">
    <h2 class="text-center mb-4 fw-bold" style="color: #341539;">Login</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "needs-validation" }) do |f| %>
      <div class="mb-3">
        <label class="form-label"><i class="fa fa-user me-2" style="color: #CE53E0;"></i>Username or Email</label>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <div class="mb-3">
        <label class="form-label"><i class="fa fa-lock me-2" style="color: #CE53E0;"></i>Enter your Password</label>
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="d-flex justify-content-between align-items-center mb-3">
          <div class="form-check">
            <%= f.check_box :remember_me, class: "form-check-input" %>
            <%= f.label :remember_me, class: "form-check-label" %>
          </div>
          <%= link_to "Forgot password?", new_password_path(resource_name), class: "text-decoration-none fw-semibold", style: "color: #5B1166;" %>
        </div>
      <% end %>

      <div class="d-grid mb-3">
        <%= f.submit "Login", class: "btn rounded-pill text-white", style: "background-color: #CE53E0;" %>
      </div>
    <% end %>

    <p class="text-center mb-2">Don't have an account?
      <%= link_to "Sign up", new_registration_path(resource_name), class: "text-decoration-none fw-semibold", style: "color: #83358F;" %>
    </p>

    <div class="text-center my-3 position-relative">
      <hr>
      <span class="position-absolute top-50 start-50 translate-middle px-3 bg-white" style="color: #5B1166;">or connect with</span>
    </div>

    <div class="d-flex justify-content-center gap-3">
      <%= link_to "#", class: "btn btn-light rounded-circle shadow-sm p-2" do %>
        <i class="fab fa-facebook-f" style="color: #341539;"></i>
      <% end %>

      <%= link_to "#", class: "btn btn-light rounded-circle shadow-sm p-2" do %>
        <i class="fab fa-google" style="color: #CE53E0;"></i>
      <% end %>

      <%= link_to "#", class: "btn btn-light rounded-circle shadow-sm p-2" do %>
        <i class="fab fa-github" style="color: #5B1166;"></i>
      <% end %>
    </div>
  </div>
</div>
