<style>
  .hover-effect {
    position: relative;
    display: inline-block;
  }

  .hover-effect::after {
    content: '';
    position: absolute;
    width: 0;
    height: 1px;
    bottom: -2px;
    left: 0;
    background-color: #CE53E0;
    transition: width 0.3s ease;
  }

