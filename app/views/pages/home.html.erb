<div class="container my-5">
  <div class="card shadow rounded-4 p-4">
    <h1 class="mb-3">My Personal Home Page</h1>
    <p class="lead">You can read more about me, or check out my blog.</p>

    <div class="d-flex flex-wrap gap-2 mt-4">
      <%= link_to "About Me", about_path, class: "btn btn-outline-secondary" %>
      <%= link_to "Blog", posts_path, class: "btn btn-outline-primary" %>
      <%= link_to "Buy My Super Deluxeâ„¢ Cat!", checkout_path(
        line_items: ['price_1Ky9sDFFRI5KMv5ysJnIEe9O'],
        payment_mode: 'payment'
      ), class: "btn btn-success" %>
      <%= link_to "Subscribe To Me!", checkout_path(
        line_items: ['price_1L0iLwFFRI5KMv5yDsOW7eqQ'],
        payment_mode: 'subscription'
      ), class: "btn btn-warning text-white" %>
    </div>
  </div>

  <% if current_user %>
    <div class="card shadow rounded-4 p-4 mt-5">
      <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">User Info</h2>
        <% if @portal_session %>
          <%= link_to "Manage Billing", @portal_session.url, class: "btn btn-outline-dark" %>
        <% end %>
      </div>

      <h3 class="text-primary"><%= current_user.full_name %></h3>
      <ul class="list-group list-group-flush mt-3">
        <li class="list-group-item"><%= current_user.address.street.titleize %></li>
        <li class="list-group-item"><%= current_user.address.city.titleize %></li>
        <li class="list-group-item"><%= current_user.address.state.titleize %></li>
        <li class="list-group-item"><%= current_user.address.zip %></li>
        <li class="list-group-item"><%= current_user.address.country.titleize %></li>
      </ul>
    </div>
  <% end %>
</div>
