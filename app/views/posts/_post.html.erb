<div id="<%= dom_id post %>" class="card h-100 shadow-sm border border-purple-200 hover:border-purple-400 transition-all duration-300">
  <% if post.images.attached? %>
    <div class="ratio ratio-16x9">
      <%= image_tag(post.images.first, class: "card-img-top object-fit-cover rounded-t-lg") %>
    </div>
  <% end %>

  <div class="card-body text-center">
    <h5 class="card-title" style="color: #5B1166;"><%= post.title %></h5>
    <p class="mb-1" style="color: #83358F;">
      Posted by <%= link_to post.user.full_name, user_path(post.user), class: "fw-semibold text-decoration-none", style: "color: #CE53E0;" %>
    </p>
    <p style="color: #83358F;"><%= pluralize(post.views, "view") %></p>
    <% if controller.action_name == "show" %>
      <p class="card-text text-muted"><%= post.body %></p>
    <% end %>
  </div>

  <div class="card-footer bg-transparent border-t border-purple-100 text-center">
    <%= link_to "Show this post", post, class: "btn w-100", style: "background-color: #341539; color: white;" %>
  </div>
</div>
